{
  "name": "propresenter-sync",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Desktop utility to sync plans/media into ProPresenter and automate Sunday workflows.",
  "author": "",
  "main": "dist-electron/main.cjs",
  "engines": {
    "node": ">=20.4.0"
  },
  "volta": {
    "node": "22.12.0",
    "pnpm": "9.12.3"
  },
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron": "env -u ELECTRON_RUN_AS_NODE cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k -r \"pnpm dev:renderer\" \"wait-on tcp:5173 && pnpm dev:electron\""
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.6.0",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.36.4",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "31.7.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.5.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.4"
  }
}
